@model IEnumerable<ProductViewModel>

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" />
                        <div class="card-body">
                            <h3 class="card-title text-success text-truncate">@product.Name</h3>
                            <span class="badge badge-light mb-2">@product.CategoryName</span>
                            <p class="card-text text-justify">@Html.Raw(product.SubstringDescription())</p>
                        </div>

                        <div class="row px-3 py-2">
                            <div class="col">
                                <span style="font-size:23px;">@string.Format("{0:c}", product.Price)</span>
                            </div>
                            <div class="col">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>